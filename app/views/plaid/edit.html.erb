<main role="main">
  <div class='authform'>
    <div class="help-block">
      We don't keep any of your banking information besides the name of your bank, so to update, you'll have to start from scratch.
    </div>
    <%= form_for current_user, :url => user_plaid_path(current_user), method: :put do |f| %>
      <div class="form-group">
        <%= f.label "Online banking username" %>
        <%= f.text_field :plaid_username, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label "Online banking password" %>
        <%= f.password_field :plaid_password, class: 'form-control' %>
      </div>
      <%= f.submit 'Update', :class => 'button right' %>
      <a href="<%= plaid_delete_path %>"><input type="button" value="Remove bank info" class ="button left"/></a>
    <% end %>
  </div>
</main>
